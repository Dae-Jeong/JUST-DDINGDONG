# ==========================================
# DD-API Application Configuration Example
# ==========================================
# Copy this file to src/main/resources/application.properties and modify values

# Application Name
spring.application.name=dd-api

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL Database Settings
spring.datasource.url=jdbc:postgresql://localhost:5432/ddapi
spring.datasource.username=YOUR_DB_USERNAME
spring.datasource.password=YOUR_DB_PASSWORD
spring.datasource.driver-class-name=org.postgresql.Driver

# ==========================================
# HikariCP Connection Pool Settings
# ==========================================
# Best practice settings for production
spring.datasource.hikari.minimum-idle=10
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.auto-commit=false
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.pool-name=DdApiHikariPool
spring.datasource.hikari.max-lifetime=1800000
spring.datasource.hikari.connection-timeout=20000
spring.datasource.hikari.leak-detection-threshold=60000

# ==========================================
# JPA/Hibernate Configuration
# ==========================================
# Development: update, Production: validate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# ==========================================
# RabbitMQ Configuration
# ==========================================
spring.rabbitmq.host=localhost
spring.rabbitmq.port=5672
spring.rabbitmq.username=YOUR_RABBITMQ_USERNAME
spring.rabbitmq.password=YOUR_RABBITMQ_PASSWORD

# ==========================================
# CORS Configuration
# ==========================================
# Development: localhost ports, Production: your domain
app.cors.allowed-origins=http://localhost:3000,http://localhost:5173

# ==========================================
# Swagger/OpenAPI Configuration
# ==========================================
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operationsSorter=method
springdoc.swagger-ui.tagsSorter=alpha
springdoc.swagger-ui.tryItOutEnabled=true

# ==========================================
# Logging Configuration (Optional)
# ==========================================
# Uncomment and modify for custom logging levels
# logging.level.just.ddingdong=DEBUG
# logging.level.org.springframework.security=DEBUG
# logging.level.org.hibernate.SQL=DEBUG

# ==========================================
# Profile-specific Configuration (Optional)
# ==========================================
# Uncomment to activate specific profiles
# spring.profiles.active=dev

# ==========================================
# Additional Security Configuration (Optional)
# ==========================================
# JWT secret key (replace with your own secure key)
# app.jwt.secret=YOUR_JWT_SECRET_KEY_HERE_MINIMUM_256_BITS
# app.jwt.expiration=86400000